<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Роли: 0-администратор; 1-звонки; 2-мастер приемщик; 3-мастер цеха"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/n_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="50dp"
        android:hint="Имя пользователя"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/n_passw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/n_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n_passw"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Роль (0-4)"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />



    <Button
        android:id="@+id/btn_Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n_role"
        android:layout_marginHorizontal="20dp"
        android:text="Сохранить" />

</RelativeLayout>